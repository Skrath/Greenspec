<config>
    <modules>
        <BlueAcorn_Greenspec>
            <version>0.1.0</version>
        </BlueAcorn_Greenspec>
    </modules>

    <global>
        <models>
            <ba_greenspec>
                <class>BlueAcorn_Greenspec_Model</class>
            </ba_greenspec>
        </models>

        <helpers>
            <ba_greenspec>
                <class>BlueAcorn_Greenspec_Helper</class>
            </ba_greenspec>
        </helpers>

        <!-- Add Collector to quote object -->
        <sales>
            <quote>
                <totals>
                    <greenspec>
                        <class>ba_greenspec/sales_quote_address_total_discount</class>
                        <after>weee,discount,tax,tax_subtotal,grand_total</after>
                        <before>giftcardaccount,customerbalance</before>
                    </greenspec>
                </totals>
            </quote>
        </sales>

        <resources>
            <greenspec_setup>
                <setup>
                    <module>BlueAcorn_Greenspec</module>
                    <class>BlueAcorn_Greenspec_Model_Resource_Setup</class>
                </setup>
            </greenspec_setup>
        </resources>

        <events>
            <checkout_submit_all_after>
                <type>singleton</type>
                <class>ba_greenspec/observer</class>
                <method>sayHello</method>
            </checkout_submit_all_after>
        </events>
    </global>

    <default>
        <payment>
            <greenspec>
                <active>1</active>
                <model>ba_greenspec/greenspec</model>
                <order_status>pending</order_status>
                <title>Greenspec</title>
                <cctypes>AE,VI,MC,DI,SS</cctypes>
                <payment_action>authorize_capture</payment_action>
                <allowspecific>0</allowspecific>
            </greenspec>
        </payment>
        <sales>
            <totals_sort>
                <greenspec>101</greenspec>
            </totals_sort>
        </sales>
    </default>
</config>